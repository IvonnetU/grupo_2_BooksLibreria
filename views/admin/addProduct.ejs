<%- include('../partials/head-admin')%>

  <body class="body-add">
    <section class="container-formAdd boxShadow">
      <h2>Agregar Producto Nuevo</h2>
      <form action="/admin/create" method="POST" enctype="multipart/form-data">
        <section class="form-group">
          <div>
            <div>
              <label for="nameBook" class="label-filter">Nombre del libro</label>
              <input type="text" name="nameBook" class="input-filter" placeholder="Ingresa nombre del libro">
            </div>
            <div>
              <label for="author" class="label-filter">Autor(a)</label>
              <input type="text" name="author" class="input-filter" placeholder="Ingresa autor(a) de libro">
            </div>
            <div>
              <label for="price" class="label-filter">Precio</label>
              <input type="text" name="price" class="input-filter" placeholder="Ingresa precio del libro sin IVA">
            </div>
            <div>
              <label for="edit" class="label-filter">Editorial</label>
              <input type="text" name="edit" class="input-filter" placeholder="Nombre de la editorial">
            </div>
            <div>
              <label for="format" class="label-filter">Formato</label>
              <input type="text" name="format" class="input-filter" placeholder="Formato del libro ej:Libro">
            </div>
            <div>
              <label for="category" class="label-filter">Categoria</label>
              <select name="category" id="category-book" class="input-filter">
                <option value="0">Selecciona la Categoria</option>
                <option value="Historia universal">Historia universal</option>
                <option value="Novela histórica">Novela histórica</option>
                <option value="Feminismo">Feminismo</option>
                <option value="Young adult">Young adult</option>
                <option value="Novela Gráfica">Novela Gráfica</option>
                <option value="Acción">Acción</option>
                <option value="Ficción">Ficción</option>
                <option value="Romántica">Romántica</option>
                <option value="Historia">Historia</option>
                <option value="Suspenso y terror">Suspenso y terror</option>
                <option value="Policiaca">Policiaca</option>
                <option value="Fantástica y ciencia ficción">Fantástica y ciencia ficción</option>
                <option value="Juvenil">Juvenil</option>
                <option value="Novela histórica">Novela histórica</option>
              </select>
            </div>
            <div>
              <label for="sku" class="label-filter">SKU</label>
              <input type="text" name="sku" class="input-filter" placeholder="Ingresa código unico">
            </div>
          </div>
          <div>
            <div>
              <label for="language" class="label-filter">Idioma</label>
              <input type="text" name="language" class="input-filter" placeholder="Ingresa idioma del libro">
            </div>
            <div>
              <label for="edition" class="label-filter">Edición</label>
              <input type="text" name="edition" class="input-filter" placeholder="Versión de la edición del libro">
            </div>
            <div>
              <label for="pages" class="label-filter">Número de Páginas</label>
              <input type="text" name="pages" class="input-filter" placeholder="Cantidad de páginas del libro">
            </div>
            <div>
              <label for="cap" class="label-filter">Número de Capitulos</label>
              <input type="text" name="cap" class="input-filter" placeholder="Cantidad de capitulos del libro">
            </div>
            <div>
              <label for="image" class="label-filter">Imagen</label>
              <input type="file" name="imagebook" class="input-filter">
            </div>
            <div>
              <label for="description" class="label-filter">Descripción</label>
              <textarea name="description" id="" cols="30" rows="6" class="input-filter"
                placeholder="Descripción del libro"></textarea>
            </div>
          </div>
        </section>
        <section class="flexV containerBtn">
          <a href="/admin" class="btn-cancel ">Cancelar</a>
          <button type="submit" class="btn-add">Añadir</button>
        </section>
      </form>
    </section>
  </body>

  </html>